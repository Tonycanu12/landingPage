---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Banner from '../components/headerBanner.astro';
import Content from '../components/content.astro';
import Company from '../components/company.astro';
import '../styles/tailwind.css';
---

<Layout>
  <!-- Header fijo -->
  <div class="w-full bg-[#cb393eb7] min-h-[60vh]">
    <div class="fixed top-0 left-0 w-full z-50">
      <Header />
    </div>
    <div class="pt-20">
      <Banner />
    </div>
  </div>

  <!-- Productos -->
  <section
    id="productos"
    class="scroll-mt-[120px] w-full bg-white py-20"
  >
    <Content />
  </section>

  <!-- Nosotros / Company -->
  <section
    id="company"
    class="scroll-mt-[120px] w-full bg-[#f6f6f6] py-20"
  >
    <Company />
  </section>

  <!-- Footer -->
  <footer class="w-full h-12 flex items-center justify-center bg-gray-200">
    Footerasdasds
  </footer>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
