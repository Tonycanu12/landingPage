<div class="flex flex-col md:flex-row items-center gap-6 shadow-b-xl w-full max-w-[1200px] mx-auto px-4 py-8">


<div class="flex flex-col md:flex-row items-center gap-6 shadow-b-xl w-full max-w-7xl mx-auto px-4">
  <div id="carousel" class="flex transition-transform duration-500 ease-in-out w-full">
    <!-- Slide 1 -->
    <div class="min-w-full flex items-center justify-center h-[60vh]">
      <div class="text-white text-center px-4">
        <h2 class="text-4xl md:text-5xl font-bold">Slide 1: Bienvenido</h2>
        <p class="mt-4 text-lg md:text-xl">Contenido de la primera sección.</p>
      </div>
    </div>

    <!-- Slide 2 -->
    <div class="min-w-full flex items-center justify-center h-[60vh]">
      <div class="text-white text-center px-4">
        <h2 class="text-4xl md:text-5xl font-bold">Slide 2: Nuestros Productos</h2>
        <p class="mt-4 text-lg md:text-xl">Contenido de la segunda sección.</p>
      </div>
    </div>

    <!-- Slide 3 -->
    <div class="min-w-full flex items-center justify-center h-[60vh]">
      <div class="text-white text-center px-4">
        <h2 class="text-4xl md:text-5xl font-bold">Slide 3: Contáctanos</h2>
        <p class="mt-4 text-lg md:text-xl">Contenido de la tercera sección.</p>
      </div>
    </div>
  </div>

  <!-- Botones -->
  <button id="prev" class="absolute left-4 top-1/2 -translate-y-1/2 bg-white p-2 rounded-full shadow-md z-50">◀</button>
  <button id="next" class="absolute right-4 top-1/2 -translate-y-1/2 bg-white p-2 rounded-full shadow-md z-50">▶</button>
</div>

<script>
  const carousel = document.getElementById("carousel");
  const slides = carousel.children;
  const totalSlides = slides.length;
  let index = 0;

  document.getElementById("next").addEventListener("click", () => {
    index = (index + 1) % totalSlides;
    carousel.style.transform = `translateX(-${index * 100}%)`;
  });

  document.getElementById("prev").addEventListener("click", () => {
    index = (index - 1 + totalSlides) % totalSlides;
    carousel.style.transform = `translateX(-${index * 100}%)`;
  });
</script>
